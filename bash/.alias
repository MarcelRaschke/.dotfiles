# Define shortcuts for commands

# colored support
case ${OS} in
OSX) alias ls="ls -G" ;;
*)   alias ls="ls --color=auto"
     alias grep="grep --color=auto"
     alias fgrep="fgrep --color=auto"
     alias egrep="egrep --color=auto"
;;
esac

alias l='ls -alh'
alias ll='ls -l'
alias please='sudo $(history -p !!)'

alias encrypt="openssl enc -aes-256-cbc -salt"
alias decrypt="openssl enc -aes-256-cbc -salt -d"

# use p to open any file unsted of calling correct app explicitly
case ${OS} in
OSX) alias p="open" ;;
*)   myopen(){ xdg-open "$1" & }
     alias p="myopen"
;;
esac
