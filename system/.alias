# Define shortcuts for commands

# colored support
case ${OS} in
OSX) alias ls="ls -G" ;;
*)   alias ls="ls --color=auto"
     alias grep="grep --color=auto"
     alias fgrep="fgrep --color=auto"
     alias egrep="egrep --color=auto"
;;
esac

alias l='ls -alh'
alias ll='ls -l'

# use p unsted to open application
case ${OS} in
OSX) alias p="open" ;;
*)   alias p="xdg-open" ;;
esac
